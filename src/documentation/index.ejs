<!DOCTYPE html>
<html>
<head>
	<%- include('../_partials/meta') %>
	<script type="text/javascript" src="/scripts/tutorials/filter.js?<%= rev %>"></script>
	<title>Dojo Tutorials - Dojo Toolkit</title>
</head>
<body class="tutorials">
	<%- include('../_partials/header') %>
	<main>
		<div class="row">
			<h1 class="pageTitle">Dojo Documentation</h1>
			<div class="row full section docs nopad">
				<%- include('../_partials/ui/docsLeadin', url) %>
			</div>
		</div>

		<div class="status section alt">
			<div class="toggleRow medium-10 columns small-centered text-center">
				<%- include('../_partials/ui/tutorialMenu', {root: ''}) %>
			</div>
			<div class="cardGrid medium-10 columns small-centered" id="tutorials">
				<% categoryOrder.forEach(function(cat, idx, arr) { %>
					<%- include('../_partials/ui/tutorialSection', {tutorials: tutorials[cat]}) %>
				<% }); %>
			</div>
		</div>
		<%- include('../_partials/footer') %>
	</main>
</body>
</html>