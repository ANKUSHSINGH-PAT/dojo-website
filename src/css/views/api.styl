$imgPath = 'images/api_icons';
$navHeight = $navHeightShrink;
$subnavHeight = $subnavHeight * 0.8;

body,
html {
	width: 100%;
	height: 100%;
	font: $baseFontSize $bodyFont;
}

#head {
	padding: 0;
	border: none;
	left: 0 !important;
	top: 0 !important;
	width: 100% !important;
	overflow: hidden;
}

.nav {
	position:relative;
	height: $navHeight;
	overflow: hidden;
	.menu .menuItems li a {
		font-size: 1rem;
	}
	.row {
		padding-top: ($navHeight / 4);
	}
}

.dijitTabListContainer-top,
.selector {
	background:$subnavBg;
	margin-top:0;
	height: $subnavHeight;
	min-height: $subnavHeight;
	z-index:100;
}

.selector {
	position: fixed;
	padding:5px;
	width:300px;
	font-size:0.8rem;
	z-index:101;

	#versionSelector {
		height:29px;
		margin-left:1em;
		z-index:1002;
	}
}

.version {
	font-size:0.8rem;
}

.dijitTabContainerTopStrip,
.dijitTabContainerTop-tabs {
	height:$subnavHeight !important;
	.dijitTab {
		margin-top:7px;
		border-bottom:1px solid #ddd;
	}

	.dijitTabChecked {
		border-bottom:1px solid #fff;
		&:before {
			background:$selectedBg;
		}
	}
}

.tabStripButton-top {
	background:darken($subnavBg, 30%);
	height: $subnavHeight !important;


	&:nth-child(1) {
		border-right:1px solid darken($subnavBg, 90%);
	}

	.dijitTabStripIcon {
		color:#fff;
		position: relative;
		top:5px;
	}
}

#main { height: 100%; width: 100%; border: 0; }
#header { margin: 0; }
#loader {
	padding:0;
	margin:0;
	position:absolute;
	top:0; left:0;
	width:100%; height:100%;
	background:#efefef;
	opacity: 0.98;
	z-index:999;
	vertical-align:middle;
}

#loaderInner {
	position: absolute;
	top: 50%;
	left: 50%;
	width: 32px;
	height: 32px;
	margin-top: -16px;
	margin-left: -16px;
	background-image: url($imgPath+'/loader_lg.gif');
	background-repeat: no-repeat;
}
#printBlock { display: none; }
.spacer { border:0; background-color:#ededed; width:80%; height:1px; }

/*  Override dijit.layout.ContentPane's loadingMessage style. */

#content .dijitContentPaneLoading {
	position: absolute;
	display: block;
	text-indent: -5000px;
	direction: ltr;
	top: 50%;
	left: 50%;
	background-repeat: no-repeat;
	width: 24px;
	height: 24px;
	margin-top: -12px;
	margin-left: -12px;
	background-image: url($imgPath+"/loader_md.gif");
}

.dijitTabPaneWrapper {
	border-top:0;
	padding:0;
}


#content .dijitTabContainerTop-dijitContentPane {
	min-width:100%;
	padding:0.5em 2em 0 2em;
}

h2.jsdoc-summary-heading {
	cursor: pointer;
	background:$lightBg;
	border-bottom:1px solid darken($lightBg, 10%);
	margin-bottom:0 !important;
	padding:0.5em;

	& + .jsdoc-summary-list {
		background:$lightBg;
	}

	&:hover {
		background: lighten($selectedBg, 90%);
	}

	&.open {
		background:$selectedBg;
		color:$selectedTextColor;
	}

}

h2.jsdoc-summary-heading span {
	display: inline-block;
	width: 16px;
	height: 16px;
	background-image: url($imgPath+"/16x16/collapse-sprite.png");
	background-repeat: no-repeat;
	background-position: -16px 0;
}

h2.jsdoc-summary-heading .closed {
	background-position: 0 0;
}

/* Clear Styling */

pre code {
	background: none;
	border: none;
	margin: 0;
	padding: 0;
}

#moduleTreePane {
	margin-top:$subnavHeight;
}

#moduleTree {
	width:100%;
	overflow-x:hidden;

	.dijitTreeRow {
		padding:0.5em;
	}
	.dijitTreeRowHover {
		background:lighten($selectedBg, 90%);
		border-color:transparent;
		color:#000;
	}

	.dijitFolderOpened,
	.dijitFolderClosed {
		color:#00A0E6
	}

	.dijitTreeRowSelected {
		background: $selectedBg;
		color: $selectedTextColor;
		border-color:transparent;

		.dijitFolderOpened,
		.dijitFolderClosed,
		.dijitTreeExpando {
			color:#fff;
		}
	}

	.dijitTreeExpando {
		font-family:$iconFont;
  		width: 16px;
  		height: 16px;
  		color:#5B5B5B;
  		font-size:12px;

  		&:before {
  			position:relative;
  			top:3px;
  			left:4px;
  		}
	}

	.dijitTreeExpandoClosed:before {
  		content: '\f0fe';

	}

	.dijitTreeExpandoOpened:before {
  		content: '\f146';
	}

}

#navigation {
	border:0;
	padding-right:0;
	z-index:1;
	.dijitBorderContainerPane {
		overflow-y:auto;
		height:100%;
		z-index:1;
	}
}


