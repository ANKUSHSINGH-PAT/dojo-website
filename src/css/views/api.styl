/* for /images/icons next to each property and method */
.jsdoc-private, .jsdoc-extension, .jsdoc-inherited {
    display: inline-block;
    width: 16px;
    height: 16px;
    opacity: 0.5;   /* so /images/icons don't stand out so much */
}
.jsdoc-private {
    background-image: url($imgPath+"/16x16/private.png")
}
.jsdoc-extension {
    background-image: url($imgPath+"/16x16/extension.png")
}
.jsdoc-inherited {
    background-image: url($imgPath+"/16x16/inherited.png")
}


/* toolbar, to show/hide private, inherited, and extension properties */
.jsdoc-toolbar {
	background: rgba(#fff,0.9);
	padding: 1em;
	position: fixed;
    right: 0;
   	top: $navHeight + $subnavHeight;
    z-index: 1000;
    font-size:0.8rem;

    .dijitCheckBox {
    	width: 15px;
    	height: 15px;
    }

    .dijitCheckBoxIcon:before, .dijitCheckBoxChecked:before, .dijitCheckBoxCheckedDisabled:before {
		font-size:12px;
		line-height:15px;
    }

	.trans-icon {
		position: absolute;
		top: 4px;
		display: block;
		width: 24px;
		height: 24px;
		cursor: pointer;
	}


	.jsdoc-permalink {
		margin-right:1em;
	}

	.jsdoc-private {
    	background-image: none;     /* done via actual <img> tag instead */
    	right: 28px;
    }

    .jsdoc-extension {
	    background-image: none;     /* done via actual <img> tag instead */
	    right: 52px;
	}

	.jsdoc-public,
	.jsdoc-inherited {
	    background-image: none;     /* done via actual <img> tag instead */
	    right: 4px;
	}

	label {
		position: relative;
    	top: auto;
    	right: auto;
    	cursor: pointer;
    	margin-left: 15px;

    	&:nth-child(1) {
    		margin-left:0;
    	}
	}

	.off {
		opacity: 0.25;
	}

	.jsdoc-permalink {
	    position : initial;
	    top : initial;
	    left : initial;
	    float : left;
	    border : none;
	    width: initial;
	}
}


h1.jsdoc-title{
	font-size: $pageHeadingSize;
	font-weight: $pageHeadingWeight;
	margin: 0.35em 0;
	background-position: 0 45%;
}
h1.jsdoc-title img {
	float: left;
	padding-right: 0.25em;
}

div.jsdoc-prototype,
div.jsdoc-mixins,
.jsdoc-inheritance {
	font-size: 0.8em;
	label {
		margin-right: 1em;
	}
}

div.jsdoc-prototype a,
div.jsdoc-mixins a,
.jsdoc-inheritance a {
	text-decoration: none;
}
div.jsdoc-prototype a:hover,
div.jsdoc-mixins a:hover,
.jsdoc-inheritance a:hover {
	text-decoration: underline;
}
span.jsdoc-inheritance {
	display: inline-block;
	margin-left: 1.5em;
	font-weight: normal;
}
div.jsdoc-require,
span.jsdoc-comment-type,
span.jsdoc-return-type {
	font-family: $codeFont;
	font-weight: normal;
}
span.parameters{ font-weight: normal; }
span.jsdoc-comment-type,
span.jsdoc-return-type {
	color: #963;
}
div.jsdoc-require {
	margin: 1em 0;
}
div.jsdoc-full-summary {
	margin: 1em 0;
}

div.jsdoc-children {
	padding-bottom: 1.5em;
}

div.jsdoc-children div.jsdoc-fields h2 {
	font-size: 2rem;
	font-weight:$pageHeadingWeight;
	font-family:$headingFont;
	color:$baseColor;
}



div.jsdoc-children div.jsdoc-field-list div.jsdoc-field {
	margin: 0.5em 0;
	clear: both;
}
div.jsdoc-children div.jsdoc-fields div.jsdoc-field {
	padding: 1em;
	clear: both;
	border-bottom: 1px dotted #ccc;
}
div.jsdoc-children .odd {
	background-color: #f8f8f8;
}

div.jsdoc-field div.jsdoc-title {
	font-size:1.2rem;
	font-weight: bold;
	margin-bottom:0.5em;
	font-family:$codeFont;

	[class*='Icon'] {
		background-position:0 2px;
	}
}

div.jsdoc-field div.jsdoc-title span img {
	float: left;
	padding-right: 4px;
}

div.jsdoc-field div.jsdoc-return-type {
	font-size: 0.95em;
	padding: 0.25em;
}
.jsdoc-return-description {
    margin-top: 0.5em;
}
.jsdoc-summary {
	margin: 1em 0;
}

table.jsdoc-parameters {
	font-size: 1em;
	width: auto;
	margin: 1em 0;
	border-collapse: collapse;
}
table.jsdoc-parameters th,
table.jsdoc-parameters td {
	padding: 0.25em 0.5em;
	text-align: left;
	vertical-align: top;
	border: 1px solid #999;
}
table.jsdoc-parameters th {
	background-color: #eee;
	font-weight: bold;
}
table.jsdoc-parameters td {
	background-color: #fff;
}
table.jsdoc-parameters .jsdoc-param-description p {
	margin: 0;
}

div.jsdoc-fields .jsdoc-example {
	margin-top: 1em;
}

div.jsdoc-children div.jsdoc-fields .jsdoc-examples {

	h2 {
		color:#000;
		font-size:1.3rem;
		font-weight:400;
	}
}

/* A redo of the summary lists as UL/LI elements */
div.jsdoc-summary-list ul {
	list-style-type: none;
	padding: 0;
	margin: 0;
}
div.jsdoc-summary-list ul li {
	background-repeat: no-repeat;
	background-position: 0.5em 50%;
	padding:0.5em;
	padding-left: 2em;
	margin: 0.5em 0;

	&:nth-child(1) {
		margin-top:0
	}
}
div.jsdoc-summary-list ul li a {
	font-weight: bold;
	font-family:$codeFont;
}
div.jsdoc-summary-list ul li span {
	font-size:0.9rem;
	margin-left:0.8em;

}
div.jsdoc-summary-list ul li span.parameters {
	font-size: 1em;
	margin-left:0;
	font-family:$codeFont;
}
div.jsdoc-summary-list ul li .jsdoc-returns {
	font-weight: bold;
}

/* The legend listing the meanings of each icon */
ul.jsdoc-legend {
	list-style-type: none;
}

ul.jsdoc-legend img, ul.jsdoc-legend li > span:first-child {
	/* align icon vertically with text; note that /images/icons in second list are <span> nodes */
	vertical-align: middle;
}

.dijitCheckBoxInput {
    cursor : pointer;
}
.viewOptions {
    float: right;
}

.syntaxhighlighter {
	border-top:10px solid #1d1f21 !important;
	border-bottom:10px solid #1d1f21 !important;
	border-radius:4px;

	.bar.show {
		display:none !important;
	}
}

