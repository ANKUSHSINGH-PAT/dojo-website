.home {

	main {
		margin-top:$navHeight;
		padding:0;
	}

	.nav {
		background:#fff;
		color: $baseColor;

		.navLogo {
			color: $baseColor;
		}

		.menuItems {
			li {
				a {
					color:$baseColor;
				}
			}
		}
	}

	.heading {
		background: linear-gradient(-141deg, #FF5B3A 0%, #FF2A67 100%);
		color: #fff;
		padding:2em 0;
		text-align: center;

		h1,
		h2 {
			color: #fff;
			font-size: 4.5rem;
			font-weight:300;
			margin:0 0 1rem 0;
		}

		h2 {
			font-size: 1.25rem;
			margin-top: 2rem;
		}

		.tagline {
			display: block;
			font-size: 1.2rem;
			margin-bottom:2rem;
		}

		.button {
			background:none;
			border:2px solid white;
			border-radius:5%;
			padding:1rem 2rem;
		}

		.trusted {
			.sprite {
				imageSprite(trusted2x, png);
				background-size:1600px * 0.5 128px * 0.5;
				display:inline-block;
				height:$trustedIconHeight;
				width:$trustedIconWidth;
			}

			.cisco {
				trustedIcon(0, 0);
			}

			.jpmorgan {
				trustedIcon(1, 0);
			}

			.esri {
				trustedIcon(2, 0);
			}

			.intuit {
				trustedIcon(3, 0);
			}

			.adp {
				trustedIcon(4, 0);
			}

			.ibm {
				trustedIcon(5, 0);
			}

			.fanniemae {
				trustedIcon(6, 0);
			}

			.marriott {
				trustedIcon(7, 0);
			}

			.sitepen {
				trustedIcon(0, 1);
			}

			.vmware {
				trustedIcon(1, 1);
			}

			.philips {
				trustedIcon(2, 1);
			}

			.mathworks {
				trustedIcon(3, 1);
			}

			.pearson {
				trustedIcon(4, 1);
			}

		}
	}

	.news {
		background:$softBlack;
		color: #fff;
		max-width:100%;

		.title {
			background:lighten($softBlack, 10%);
			color:$dojoOrange;
			padding:2rem;
			text-align:center;

			h3 {
				margin:0;
				padding:0;
				text-transform:uppercase;
			}
		}
	}

	#docs {
		.doc {
			text-align: center;
			h3 {
				color:#3EDBD9;
				font-weight:300;
				text-transform:uppercase;

				a {
					color:#fff;
				}
			}

			&.tutorials {
				background:#3EDBD9;
			}

			&.guide {
				background:#3A98FE;


			}

			&.api {
				background:#5841B8;
			}
		}
	}
}