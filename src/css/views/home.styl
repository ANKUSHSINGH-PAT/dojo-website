.home {

	main {
		margin-top:$navHeight;
		padding:0;
	}

	.nav {
		background:#fff;
		color: $baseColor;

		.navLogo {
			color: $baseColor;
		}

		.menuItems {
			li {
				a {
					color:$baseColor;
				}
			}
		}
	}

	.heading {
		background: linear-gradient(-141deg, #FF5B3A 0%, #FF2A67 100%);
		color: #fff;
		padding:2em 0;
		text-align: center;

		h1,
		h2 {
			color: #fff;
			font-size: 4.5rem;
			font-weight:300;
			margin:0 0 1rem 0;
		}

		h2 {
			font-size: 1.25rem;
			margin-top: 2rem;
		}

		.tagline {
			display: block;
			font-size: 1.2rem;
			margin-bottom:2rem;
		}

		.button {
			background:none;
			border:2px solid white;
			border-radius:5%;
			padding:1rem 2rem;
		}
	}

	.news {
		background:$softBlack;
		color: #fff;
		max-width:100%;

		.title {
			background:lighten($softBlack, 10%);
			color:$dojoOrange;
			padding:2rem;
			text-align:center;

			h3 {
				margin:0;
				padding:0;
				text-transform:uppercase;
			}
		}
	}

	#docs {
		.doc {
			text-align: center;
			h3 {
				color:#3EDBD9;
				font-weight:300;
				text-transform:uppercase;

				a {
					color:#fff;
				}
			}

			&.tutorials {
				background:#3EDBD9;
			}

			&.guide {
				background:#3A98FE;


			}

			&.api {
				background:#5841B8;
			}
		}
	}
}