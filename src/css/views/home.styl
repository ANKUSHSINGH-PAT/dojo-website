.home {
	main {
		padding:0;
	}

	.nav {
		background:#fff;
		color: $baseColor;
		position:relative;
		transition: none;

		&.shrink {
			height: $navHeight;

			.menuItems li a {
				color: $baseColor;
			}

			.row {
				padding-top: ($navHeight / 2.5);
			}
		}

		.navLogo {
			color: $baseColor;
		}

		.menuItems {
			li {
				a {
					color:$baseColor;
				}
			}
		}

		.mobileMenuToggle {
			color: $baseColor;
		}

		.mobileHeader {
			background:lighten($softBlack, 10%);
		}
	}

	.section {
		padding-top: 2em;
		padding-bottom: 2em;
	}

	.sectionTitle {
		color:$dojoOrange;
		font-size: 2rem;
		text-align:center;
		text-transform: uppercase;
	}

	.heading {
		background-color:$dojoRed;
		dojoGradient();

		color: #fff;
		padding:3rem 0 1.5rem 0;
		text-align: center;

		h1,
		h2 {
			color: #fff;
			font-size: 4.5rem;
			font-weight:300;
			margin:0 0 1rem 0;
		}

		h2 {
			font-size: 1.25rem;
			margin-top: 2rem;
		}

		.tagline {
			display: block;
			font-size: 1rem;
		}

		.button {
			button(transparent, #fff, #fff, $dojoRed);
			border:2px solid #fff;
			font-size:1rem;
			padding:1em 4em;
			margin:3em 0;
		}
	}

	.news {
		background:$softBlack;
		color: #fff;
		padding:0;
		position:relative;
		text-align: center;

		.newsItem,
		.title {
			padding:3rem 2rem;
		}

		.title {
			background:lighten($softBlack, 10%);
			color:$dojoOrange;
			font-size:1.2rem;
			height:100%;
			margin:0;
			position:absolute;
			left:0;
			top:0;
			text-align:center;
			text-transform:uppercase;
		}

		.newsItem {

			p {
				margin:0;
				padding:0;
				link($dojoOrange);
			}
		}
	}

	.trusted {
		background: $lightBg;
		text-align: center;
		padding:2em;

		[class^="company-"] {
			color:$softBlack;
			display:inline-block;
			font-size:3em;
		}

		.sectionTitle {
			font-size:1.25rem;
			font-weight:400;
			margin-top:0;
			text-transform: uppercase;
		}

	}


	.three-up-icons {
		.iconBlock {
			padding-top:6em;

			&:hover {
				* {
					color: #fff !important;
				}

				&.guide {
					background-color: $guideHoverBg;
				}

				&.tutorials {
					background: $tutorialsHoverBg;
					.sectionTitle {
						opacity:0;
					}
				}

				&.api {
					background: $apiHoverBg;
				}

				[class^="icon-"],
				.iconLink {
					transform: translate(0,-5px);

				}
			}
		}
	}

	.support {
		background: $lightBg;
		link($dojoOrange);
		text-align: center;

		.columns {
			margin: 1em auto;
		}

		.icon {
			display: inline-block;
			text-align: center;

			&:before {
				background-color: #fff;
				border-radius: 100%;
				color: $dojoRed;
				content: '';
				display:block;
				font-family: 'icomoon_icons';
				font-size:58px;
				height: 100px;
				margin:0 auto 1rem auto;
				padding-top:5px;
				transition: background-color 0.4s, color 0.4s, font-size 0.4s;
				width: 100px;
			}


			&.mailingList:before {
				content: '\e84f';
				font-size:46px;
				padding-top:15px;
			}

			&.irc:before {
				content: '\e8a3';
			}

			&.stackoverflow:before {
				content: '\e600';
				font-size:46px;
				padding-top:12px;
			}

			&.bug:before {
				content: '\e8ce';
			}

			&.support:before {
				background: #fff url('images/sprite_sitepen_logo.png') no-repeat 50% 20px;
				background-size: 41px 139px;
			}

			&:hover {
				&:before {
					background-color: $dojoRed;
					color: #fff;
				}

				&.support:before {
					background-color: $dojoRed;
					background-position: 50% -60px;
				}
			}
		}
	}
}