@import '../vendor/tomorrow-night-bright.css'
@import '../variables'

.tutorial {

	.content {
		padding-top:2em;
	}

	iframe + p {
		margin-top: 1em;
	}

	pre {
		code {
			background: $codeBg;
			color: #f8f8f2;
			display: block;
			font-family: $codeFont;
			overflow-x: auto;
			padding: 1em;
		}
	}

	h2 {
		font-size:$pageHeadingSize;
		font-weight:$pageHeadingWeight;
		margin:0;
	}

	h3 {
		font-size:2rem;
	}

	h4 {
		font-size: 1.5rem;
		margin-bottom:0;
	}

	h5 {
		font-size: 1.2rem;
		margin-bottom:0;
	}

	.difficulty {
		span {
			font-weight:bold;

			&:nth-child(2) {
				margin-left:2rem;
			}
		}
	}
}