.footer {
	background-color:$softBlack;
	color:#fff;
	font-size:0.75em;
	margin-top:2rem;

	.content {
		max-width:90%;
		margin:0 auto;
		padding:2rem;

		link($dojoOrange);

		.license {
			margin-left: 1em;
		}

		.info {
			text-align: right;
		}
	}
}


.becomeContributor {
	text-align: center;
	.button {
		button(transparent, $dojoOrange, $dojoRed, #fff);
		border:2px solid $dojoRed;
		font-size:1rem;
		padding:1em 4em;
		margin:1em 0 3em 0;
	}
}


.soc {
	text-align:center;

	[class^="icon-"] {
		display: inline-block !important;
		font-size: 2rem;
		margin:0 0.7em;
		text-decoration: none;
	}

	.icon-github {
		linkStates(#4183C4);
	}

	.icon-twitter {
		linkStates(#55ACEE);
	}

	.icon-facebook {
		linkStates: #3B5998;
	}

	.icon-gplus {
		linkStates: #DD4B39;
	}
}


.docsLeadin {

	.doc {
		padding:6rem 2rem 4rem 2rem;
		text-align: center;
		transition: background-color 0.2s;

		[class^="icon-"] {
			display:block;
			color:$docIconColor;
			font-size:5.5rem;
			position: relative;
			text-decoration:none;
			transition: 0.4s ease-in;
		}

		.docLink {
			color:$docTitleColor;
			font-size: 1.2rem;
			font-weight:400;
			margin-top:1em;
			position: relative;
			text-transform:uppercase;
			link($dojoOrange);
			transition: 0.4s ease-in;

			a {
				display:block;
			}
		}

		p {
			font-size:0.9rem;
			margin:0 auto;
			max-width:80%;
		}

	}

	.tutorials {
		position: relative;

		.sectionTitle {
			position:absolute;
			left:0;
			right:0;
			top:0;
			opacity:1;
			transition: opacity 0.4s;
		}
	}
	}