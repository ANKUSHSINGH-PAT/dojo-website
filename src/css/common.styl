@import url('//fonts.googleapis.com/css?family=Lato:100,300,400,700|Merriweather:400,700,300,300italic,400italic,700italic|Ubuntu+Mono');
@import url('fonts/icomoon_icons/style.css');
@import url('fonts/icomoon_trusted/style.css');
@import '../../node_modules/rupture/rupture';
@import 'vendor/foundation.css';
@import variables
@import mixins
@import nib


main {
	padding-top: $navHeight + $subnavHeight;
}

.row.full {
	max-width:100%;
}

.row.nopad {
	padding: 0 !important;
}

body,
html {
	width: 100%;
	height: 100%;
	font-family: $bodyFont;
	font-size:$baseFontSize;
}

h1,
h2,
h3,
h4,
h5,
h6 {
	font-family: $headingFont;
	a {
		color: $headingColor;
		text-decoration:none;
	}
}

h1 {
	font-size:$pageHeadingSize;
	font-weight:$pageHeadingWeight;
	margin:0;
}

h2 {
	font-size: 2rem;
	font-weight: 400;
	margin-bottom:0.25em;
}

.pageHeading {
	margin-top: 2rem;
	text-align: center;
}

.subHeading {
	color: $dojoRed;
	font-size: 2.4rem;
	font-weight: 300;
	text-align: center;
}

h3 {
	font-size:1.7rem;
	font-weight: 400;
	margin: 2rem 0 0.7rem 0;
}

h4 {
	font-size: 1.5rem;
	margin-bottom:0;
}

h5 {
	font-size: 1.2rem;
	margin-bottom:0;
}

p {
	line-height:1.8;
}

ul {
	li {
		margin: 0.5em;
	}
}

a {
	color: $linkColor;

	&:hover, &:focus {
		color: lighten($linkColor, 20%);
	}
}

pre,
code {
	border-radius: 4px
	font-family: $codeFont;
	font-size:$codeFontSize;
}

.button {
	text-transform: uppercase;
	font-size: 13px;
	letter-spacing: 2px;
	font-weight: 100;
	font-family: $bodyFont;

	&.secondary {
		border: 1px solid #163e5a;
		background: transparent;
		color: #163e5a;

		&:hover {
			background: transparent;
		}
	}
}

label {
	display:inline-block;
}

select {
	width: auto;
}

.text-center {
	text-align: center;
}

.text-right {
	text-align: right;
}

.section {
	padding-bottom: 2em;
}

.pageTitle {
	text-align: center;

	h1 {
		font-size: 3.65rem;
		font-weight: 300;
		margin: 50px 0 30px 0;
	}
}

.contentTitle {
	color:$dojoOrange;
	font-size: 2rem;
	text-align:center;
	font-weight: 300;
	margin: 0 0 1em;
	font-size: 2.5rem;
}

.contentSubtitle {
	font-weight: 300;
	font-size: 1.8rem;
	margin-bottom: .75em;
	font-family: $headingFont;
	text-align: center;
}

.contentText {
	font-size: 15px;
	line-height: 30px;
}

ul.contentText,
ol.contentText {
	padding-left: 20px;

	strong {
		display: block;
	}

	li {
		margin-bottom: 30px;

		&:last-child {
			margin-bottom: none;
		}
	}
}

.skinnyContent {
	max-width: 560px !important;
	text-align: justify;
}