@import url('//fonts.googleapis.com/css?family=Lato:100,300,400,700|Merriweather:400,700,300,300italic,400italic,700italic|Ubuntu+Mono');
@import url('fonts/icomoon_icons/style.css');
@import url('fonts/icomoon_trusted/style.css');
@import '../../node_modules/rupture/rupture';
@import 'vendor/foundation.css';
@import variables
@import mixins
@import nib
@import header


main {
	padding-top: $navHeight + $subnavHeight;
	.row.full {
		max-width:100%;
	}
}

body,
html {
	width: 100%;
	height: 100%;
	font-family: $bodyFont;
	font-size:$baseFontSize;
}

h1,
h2,
h3,
h4,
h5,
h6 {
	font-family: $headingFont;
	a {
		color: $headingColor;
		text-decoration:none;
	}
}

h2 {
	font-size: 2rem;
}

h3 {
	margin: 2rem 0 0.7rem 0;
}

p {
	line-height:1.8;
}

ul {
	li {
		margin: 0.5em;
	}
}

a {
	color: $linkColor;

	&:hover, &:focus {
		color: lighten($linkColor, 20%);
	}
}

pre,
code {
	font-family: $codeFont;
}

.button {
	text-transform: uppercase;
	font-size: 13px;
	letter-spacing: 2px;
	font-weight: 100;
	font-family: $bodyFont;

	&.secondary {
		border: 1px solid #163e5a;
		background: transparent;
		color: #163e5a;

		&:hover {
			background: transparent;
		}
	}
}


label {
	display:inline-block;
}

select {
	width: auto;
}

@keyframes dojoGradient {
    0%{background-position:0% 51%}
    50%{background-position:100% 50%}
    100%{background-position:0% 51%}
}