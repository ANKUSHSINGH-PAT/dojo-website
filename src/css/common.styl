@import '../../node_modules/rupture/rupture';
@import 'vendor/foundation.css';
@import variables
@import mixins
@import nib


@font-face {
	font-family: 'icomoon_icons';
	src:url('/css/fonts/icomoon_icons.eot?yxdcnb');
	src:url('/css/fonts/icomoon_icons.eot?#iefixyxdcnb') format('embedded-opentype'),
		url('/css/fonts/icomoon_icons.woff?yxdcnb') format('woff'),
		url('/css/fonts/icomoon_icons.ttf?yxdcnb') format('truetype'),
		url('/css/fonts/icomoon_icons.svg?yxdcnb#icomoon_icons') format('svg');
	font-weight: normal;
	font-style: normal;
}

a:link {
	text-decoration: none;
}

main,
.site-main {
	display:block;
	margin-top: $navHeight + $subnavHeight;

	&.nonav {
		margin-top: $navHeight;
	}

	+below(3) {
		margin-top:$navHeight;
	}
}


.constrain {
	max-width:$maxWidth;
}


.row {
	&.full {
		max-width:100%;

		.constrain {
			margin:0 auto;
		}
	}

	&.nopad {
		padding: 0 !important;
	}

}

.section {
	padding-top: 2em;
	padding-bottom: 2em;

	+below(2) {
		padding-top:(2em * $scaleBelow2);
		padding-bottom:(2em * $scaleBelow2);
	}

	&.alt {
		background: $sectionAltBg;

		& + .footer {
			margin-top:0;
		}
	}

}

body,
html {
	width: 100%;
	height: 100%;
	font-family: $bodyFont;
	font-size:$baseFontSize;
}


h1,
h2,
h3,
h4,
h5,
h6 {
	font-family: $headingFont;
	a {
		color: $headingColor;
		text-decoration:none;
	}
}

h1 {
	font-size:$pageHeadingSize;
	font-weight:$pageHeadingWeight;
	margin:0;

	+below(2) {
		font-size:($pageHeadingSize * $scaleBelow2);
	}
}

h2 {
	font-size: 2rem;
	font-weight: 400;
	margin-bottom:0.25em;

	+below(2) {
		font-size:(2rem * $scaleBelow2);
	}
}

img {
	border:0;
}


.pageTitle {
	margin-top: 2rem;
	text-align: center;

	+below(2) {
		margin-top:1rem;
	}
}

.sectionTitle {
	color: $headingColor;
	font-size: 2.4rem;
	font-weight: 300;
	text-align: center;
	margin-bottom:2rem;

	+below(2) {
		font-size:1.7rem;
		margin-bottom:1.5rem;
	}

	&.alt {
		color:$dojoOrange;
	}

	&:before,
	.icon  {
		color: $dojoRed;
		display:inline-block;
		font-family: 'icomoon_icons';
		font-size: 2.2rem;
		margin-right:1rem;
	}

}

.subTitle {
	color: $dojoOrange;
	font-size: 2.4rem;
	font-weight: 300;
	text-align: center;
	margin-bottom:2rem;

	+below(2) {
		font-size:(2.4rem * $scaleBelow2);
	}
}

h3,
.sectionSubTitle {
	font-size:1.7rem;
	font-weight: 400;
	margin: 2rem 0 0.7rem 0;

	&.alt {
		color:$dojoOrange;
	}
}

h4 {
	font-size: 1.1rem;
	margin-bottom:0;
}

h5 {
	font-size: 1.2rem;
	margin-bottom:0;
}

p {
	line-height:1.8;
}

ol,
ul {
	li {
		margin: 0.5em;
	}
}

a {
	color: $linkColor;

	&:hover, &:focus {
		color: lighten($linkColor, 20%);
	}
}


code {
	color:$codeTextColor;
	padding:0.2em;
	border:1px solid $lightBorder;
}

pre,
code {
	background:$lightBg;
	border-radius: 4px
	font-family: $codeFont;
	font-size:$codeFontSize;

	&.codeBlock {
		background:$codeBg;
		padding:1em;
		overflow: hidden;

		code {
			background:none;
			color: #fff;
			border:0;
		}
	}
}


.button {
	text-transform: uppercase;
	font-size: 13px;
	letter-spacing: 2px;
	font-weight: 100;
	font-family: $bodyFont;

	&.secondary {
		border: 1px solid #163e5a;
		background: transparent;
		color: #163e5a;

		&:hover {
			background: transparent;
		}
	}
}

.learnMore {
	text-align: center;

	.button {
		button($dojoRed, #fff, $dojoRed, #fff);
		padding:1rem 4rem;
		margin:1em 0 3em 0;
	}
}


label {
	display:inline-block;
}

select {
	width: auto;
}

.text-center {
	text-align: center;
}

.text-right {
	text-align: right;
}