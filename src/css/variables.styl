$baseColor = #FF4151;
$linkColor = #0D47A1;
$selectedBg = $baseColor;
$selectedTextColor = #fff;
$lightBg = #EFEFEF;

$softBlack = #353535;
$dojoOrange = #FC5B3A;
$dojoRed = #FC3C56;
$dojoGreen = #4CAF50;
$dojoLightBlue = #00BCD4;


// Typography
$headingFont = "Lato", sans-serif;
$bodyFont = "Merriweather", serif;
$codeFont = Ubuntu Mono, "Consolas", "Courier", monospace;
$iconFont = "FontAwesome";
$baseFontSize = 15px;

$headingColor = #000;
$pageHeadingSize = $baseFontSize * 3.5;
$pageHeadingWeight = 300;

// Header/Navigation
$navFont = $headingFont;
$navFontSize = 1rem;
$navHeight = 86px;
$navBg = $baseColor;
$navTextColor = #fff;
$navBorder = 0;
$navTransitionTime = 0.4s;

// Sub-Nav
$subnavBg = $lightBg;
$subnavHeight = 50px;
$subnavLink = $softBlack;


// Code
$codeBg = #23241f;

$buttonBg = #01BBDE;
$buttonTextColor = #fff;

scale = 0 480px 720px 800px 1050px;