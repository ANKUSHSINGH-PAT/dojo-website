$baseColor = #FF4151;
$linkColor = #0D47A1;
$selectedBg = $baseColor;
$selectedTextColor = #fff;
$lightBg = #F5F5F5;
$sectionAltBg = #FBFBFB;
$lightBorder = #DFDFDF;


$softBlack = #353535;
$dojoOrange = #FC5B3A;
$dojoRed = #FC3C56;
$dojoGreen = #4CAF50;
$dojoLightBlue = #00BCD4;
$dojoBlue = #007ACC;


// Typography
$headingFont = "Lato", sans-serif;
$bodyFont = "Merriweather", serif;
$codeFont = Ubuntu Mono, "Consolas", "Courier", monospace;
$iconFont = "FontAwesome";
$baseFontSize = 15px;
$codeFontSize = 1rem;

$headingColor = #000;
$pageHeadingSize = $baseFontSize * 3.5;
$pageHeadingWeight = 300;

// Header/Navigation
$navFont = $headingFont;
$navFontSize = 1rem;
$navHeight = 86px;
$navBg = $baseColor;
$navTextColor = #fff;
$navBorder = 0;
$navTransitionTime = 0.4s;
$navShadow = 1px 1px 3px 0 rgba(50, 50, 50, 0.2);
$navHeightShrink = $navHeight * 0.65;

// Sub-Nav
$subnavBg = $lightBg;
$subnavHeight = 50px;
$subnavLink = $softBlack;


// Code
$codeBg = #23241f;

$buttonBg = #01BBDE;
$buttonTextColor = #fff;

scale = 0 480px 720px 800px 1050px;


// Docs Leadin
$docIconColor = $dojoRed;
$docTitleColor = $dojoOrange;
$guideHoverBg = $dojoOrange;
$apiHoverBg = $dojoRed;
$tutorialsHoverBg = mix($guideHoverBg, $apiHoverBg);