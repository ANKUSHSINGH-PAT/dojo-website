/**
 * Overrides
 */

body,
html {
	width: 100%;
	height: 100%;
	font-family: $bodyFont;
	font-size:14px;
}

h1,
h2,
h3,
h4,
h5,
h6 {
	font-family: $headingFont;
}

.button {
	text-transform: uppercase;
	font-size: 13px;
	letter-spacing: 2px;
	font-weight: 100;
	font-family: $bodyFont;

	&.secondary {
		border: 1px solid #163e5a;
		background: transparent;
		color: #163e5a;

		&:hover {
			background: transparent;
		}
	}
}

a {
	color: #FF6C6C;

	&:hover, &:focus {
		color: #FF6C6C;
	}
}

p {
	font-weight: 300;
}

pre {
	word-wrap: break-word;
	padding: 0.5em;
	color: #333;
	background: #f8f8f8;

	code {
		color: inherit;
		font-weight: inherit;
	}
}

main {
	//padding-top: $navHeight + 1em;
}

.nav {
	background: $navBg;
	box-shadow: 0 2px 4px -1px rgba(0,0,0,0.25);
	color:$navTextColor;
	font-family: $navFont;
	height:$navHeight;
	margin: 0;
	/*position: fixed;
	top:0;*/
	width: 100%;
	z-index: 1;

	.columns {
		height: $navHeight;
		position: relative;
	}

	.navLogo {
		absolute: bottom 25% left 0;
		display: block;
		font-size:1.8em;
		width: 129px;
		text-transform:uppercase;
	}

	.menu {
		absolute: bottom 25% right 15px;

		.mobileHeader {
			display: none;
			font-size: 18px;
			font-weight: 100;
		}

		ul {
			margin: 0;
			padding-top: 5px;

			li a {
				color:$navTextColor;
				font-size: 1rem;
				font-weight: 400;
				text-transform:uppercase;
				margin-left: 23px;
				vertical-align: top;
			}
		}

		.mobileLogo {
			display: none;
			width: 50px;
			height: 40px;
		}
	}
}

