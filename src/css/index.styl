@import nib
@import variables
@import url('//fonts.googleapis.com/css?family=Lato:100,300,400,700|Merriweather:400,700,300,300italic,400italic,700italic');
@import '../../node_modules/rupture/rupture';
@import 'vendor/foundation.min.css';
@import 'vendor/sublime.css';
@import overrides;


main {
	padding-top: $navHeight;
}

.nav {
	background: $navBg;
	color:$navTextColor;
	font-family: $navFont;
	height:$navHeight;
	margin: 0;
	position: fixed;
	top:0;
	width: 100%;
	z-index: 1;

	.navLogo {
		font-size:1.6em;
		width: 129px;
		text-transform:uppercase;
		color:$navTextColor;
	}

	.row {
		height: $navHeight;
		padding-top: ($navHeight / 2.5);
	}

	.menu {
		.mobileHeader {
			display: none;
			font-size: 18px;
			font-weight: 100;
		}

		.menuItems {
			li {
				margin:0;
				a {
					color:$navTextColor;
					font-size: 0.9rem;
					font-weight: 400;
					text-transform:uppercase;
					margin-left: 23px;
					vertical-align: top;
				}
			}
		}

		.mobileLogo {
			display: none;
			width: 50px;
			height: 40px;
		}
	}
}

/**
 * Above fold styles
 */

.aboveFold {
	overflow: hidden;
	color: white;
	background: $homeHeaderBg;
	padding: 2em 0;

	h1,
	h2 {
		color: #FFFFFF;
		font-size: 4.5rem;
		font-weight:300;
		margin:0 0 1rem 0;
	}

	h2 {
		font-size: 1.25rem;
		margin-top: 2rem;
	}

	.tagline {
		display: block;
		font-size: 1.2rem;
		margin-bottom:2rem;
	}

	.button {
		background:none;
		border:2px solid white;
	}
}
