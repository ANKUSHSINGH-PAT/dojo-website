+below(40.061em) {

	.aboveFold {

	}

	body.menuOpen {
		.mobileMenuToggle {
			// transform: translateX(-83px);
			fixed: right 20px top 20px;
			// color: #333;

			&:after {
				content: '✖'
			}
		}

		.menu {
			transform: translateX(0);
		}
	}

	.nav .menu {
		fixed: top 0 right 0;
		height: 100%;
		transform: translateX(100%);
		background: white;
		z-index: 2;
		transition: transform .2s;
		width: 140px;

		.mobileHeader {
			height: 69px;
			line-height: 62px;
			display: block;
			padding: 0 18px;
			color: white;
			background: rgb(224, 57, 48);
			border-right: 1px solid rgb(224, 57, 49);
		}

		.mobileLogo {
			display: inline-block;
			max-width: 50px;
			margin-bottom: 20px;
		}

		ul {
			padding: 22px 18px 0;
			margin: 0;
			height: calc(100% - 69px);
			border-left: 1px solid rgba(0, 0, 0, .2);

			li {
				margin-left: 0;
				display: block;
				float: none;

				a {
					color: #000;
					margin-left: 0;
				}
			}
		}
	}

	.mobileMenuToggle {
		absolute: right 20px top 20px;
		cursor: pointer;
		color: white;
		font-size: 24px;
		transition: transform .2s, color .2s;
		z-index: 3;

		&:after {
			content: '☰';
			display: block;
		}
	}
}