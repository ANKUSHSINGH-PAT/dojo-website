.nav {
	background: $navBg;
	border-bottom:$navBorder;
	color:$navTextColor;
	font-family: $navFont;
	height:$navHeight;
	margin: 0;
	position: fixed;
	top:0;
	width: 100%;
	z-index: 1;
	transition: height $navTransitionTime;

	&.shrink {
		height: $navHeightShrink;

		.menu .menuItems li a {
			font-size: 1rem;
		}

		& + .subnav {
			transform: translateY(-($navHeightShrink / 1.8));
			height: ($subnavHeight * 0.8)
			box-shadow:$navShadow;
		}

		.row {
			padding-top: ($navHeight / 6);
		}
	}

	.navLogo {
		color:$navTextColor;
		font-size:1.6rem;
		text-decoration: none;
		text-transform:uppercase;
		position: relative;
		top: -3px;
		width: 129px;
	}

	.row {
		height: $navHeight;
		padding-top: ($navHeight / 2.5);
		max-width:90%;
		transition: padding $navTransitionTime;
	}

	.menu {
		.mobileHeader {
			display: none;
			font-size: 18px;
			font-weight: 100;
		}

		.menuItems {
			li {
				margin:0;
				a {
					color:$navTextColor;
					font-size: $navFontSize
					font-weight: 400;
					margin-left: 2rem;
					text-transform:uppercase;
					text-decoration: none;
					vertical-align: top;
					transition: font-size $navTransitionTime;
				}
			}
		}

		.mobileLogo {
			display: none;
			width: 50px;
			height: 40px;
		}
	}

	.mobileMenuToggle {
		display:none;
		font-size:1.5em;
		color: $navTextColor;
		text-align:center;
		cursor:pointer;
	}
}


.subnav {
    background: $subnavBg;
    color: #fff;
    height: $subnavHeight;
    font-family: $navFont;
    position: fixed;
    top: $navHeight;
    transition: height $navTransitionTime, transform $navTransitionTime;
    width: 100%;
    z-index: 5;

    .row {
        padding-top: 0.7em;
		max-width:90%;
    }

    #dtkVersion,
    ul,
    li,
    #searchbox,
    h4 {
        display: inline-block;
        margin:0;
        padding:0;
    }

    li {
        font-size: 0.9rem;
        margin-right: 1em;

        a {
            color: $subnavLink;
            text-transform:uppercase;
            text-decoration: none;
        }
    }

    .text-right {
        text-align: right;
    }
}

@media (max-width: 750px) {
	body.menuOpen {
		.mobileMenuToggle {
			// transform: translateX(-83px);
			fixed: top 28px right 18px;
			// color: #333;

			&:after {
				content: '✖'
			}
		}

		.shrink .mobileMenuToggle {
			fixed: top 9px right 18px;
		}

		.menu {
			transform: translateX(0);
		}
	}

	.nav {
		.menu {
			fixed: top 0 right 0;
			height: 100%;
			transform: translateX(100%);
			background: white;
			z-index: 2;
			transition: transform .2s;
			width: 140px;
			text-align: left;

			.mobileHeader {
				height: $navHeight;
				line-height: $navHeight;
				display: block;
				padding: 0 18px;
				color: white;
				background: rgb(224, 57, 48);
				border-right: 1px solid rgb(224, 57, 49);
				transition: height $navTransitionTime, line-height $navTransitionTime;
			}

			.mobileLogo {
				display: inline-block;
				max-width: 50px;
				margin-bottom: 20px;
			}

			ul.menuItems {
				padding: 22px 18px 0;
				margin: 0;
				height: calc(100% - $navHeight);
				width: 100%;

				li {
					margin-left: 0;
					display: block;
					float: none;

					a {
						color: #000;
						margin-left: 0;
					}
				}
			}

			.spLabs {
				display: none;
			}
		}

		&.shrink {
			.menu .mobileHeader {
				height: $navHeightShrink;
				line-height: $navHeightShrink;
			}
		}

		.mobileMenuToggle {
			absolute: right -5px top -5px;
			cursor: pointer;
			font-size: 24px;
			transition: transform .2s, color .2s;
			z-index: 3;
			display: block;

			&:after {
				content: '☰';
				display: block;
			}
		}
	}
}