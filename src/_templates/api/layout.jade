doctype
html
  head
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title #{title} Version #{module !=null ? module.version : config.defaultVersion}
    meta(name="Description", content="Dojo toolkit API documentation viewer, version #{module !=null ? module.version : config.defaultVersion}")

    link(rel='stylesheet', href="/css/index.css")
    link(rel='stylesheet', href="/css/api.css")
    script(type="text/javascript").
        // packages: [{name:"api", location:location.pathname.replace(/\/[^/]+$/, '/') + "#{config.contextPath}scripts/api"}],
        dojoConfig = {async:1, debug:1, noGlobals:0,
            packages: [{name:"api", location: "/scripts/api"}],
            apiPath : '#{config.contextPath}',
            context : '#{config.contextPath}',
            apiDefault : '#{config.defaultVersion}',
            moduleExtension : '#{config.moduleExtension}',
            siteName : '#{config.siteName}',
            baseUrl: '/scripts/dojo/dojo/',
            #{(config.bugdb != null) ? 'bugdb : \'' + config.bugdb + '\'' : 'bugdb : null'}
        }

    script(type="text/javascript", src="/scripts/dojo/dojo/dojo.js")
    script(type="text/javascript", src="/scripts/api.js")


    script(type="text/javascript", src="/scripts/syntaxhighlighter/scripts/shCore.js")
    script(type="text/javascript", src="/scripts/syntaxhighlighter/scripts/shBrushJScript.js")
    script(type="text/javascript", src="/scripts/syntaxhighlighter/scripts/shBrushXml.js")

    link(rel='stylesheet', href="/scripts/syntaxhighlighter/css/shCore.css")
    link(rel='stylesheet', href="/scripts/syntaxhighlighter/css/shThemeDefault.css")


  body(class="#{config.theme}")
    block main
        block header
        block navigation
        block content
